<% content_for :title, "Advisable | #{@case_study.title}" %>
<% content_for :meta_tags do %>
  <meta name="description" content="<%= @case_study.subtitle %>">

  <meta property="og:site_name" content="Advisable">
  <meta property="og:title" content="<%= @case_study.title %>">
  <meta property="og:url" content="<%= specialist_case_study_url(@case_study.slug_or_uid) %>">
  <meta property="og:type" content="article">
  <meta property="og:description" content="<%= @case_study.subtitle %>">
  <% if @case_study.cover_photo.attached? %>
    <meta property="og:image" content="<%= url_for(@case_study.cover_photo) %>">
  <% end %>
  <meta property="article:published_time" content="<%= @case_study.published_at.strftime("%Y-%m-%d") %>">

  <meta name="twitter:site" content="AdvisableHQ">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= @case_study.title %>">
  <meta name="twitter:description" content="<%= @case_study.subtitle %>">
  <% if @case_study.cover_photo.attached? %>
    <meta name="twitter:image" content="<%= url_for(@case_study.cover_photo) %>">
  <% end %>

  <% if @case_study.specialist.twitter %>
    <meta name="twitter:creator" content="@<%= @case_study.specialist.twitter %>">
  <% end %>

  <%# linkedin  %>
  <meta name="author" content='<%= @case_study.specialist.account.name %>'>
<% end %>
