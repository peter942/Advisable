<% content_for :title, "Advisable Admin | Topics | #{@topic.name}" %>
<header class="bg-white shadow">
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8 flex">
    <h1 class="text-3xl font-bold text-gray-900"><%= @topic.name %></h1>
  </div>
</header>
<main>
  <div class="max-w-7xl mx-auto">
    <div class="py-8 px-4 sm:px-6 lg:px-8">
      <%= render "form", topic: @topic, url: admin_topic_path(@topic) %>
      <h2 class="mt-8 ml-2 text-xl font-bold text-gray-900">Results</h2>
      <div class="mt-8 flex flex-col">
        <div class="-my-2 -mx-4 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle md:px-6 lg:px-8">
            <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 md:rounded-sm">
              <table class="min-w-full divide-y divide-gray-300" id="topics">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="relative py-3 pl-3 pr-4 sm:pr-6"></th>
                    <th scope="col" class="py-3 pl-4 text-left text-xs font-medium uppercase tracking-wide text-gray-500 sm:pl-6">Title</th>
                    <th scope="col" class="px-3 py-3 text-left text-xs font-medium uppercase tracking-wide text-gray-500">Author</th>
                    <th scope="col" class="relative py-3 pl-3 pr-4 sm:pr-6"></th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white" data-controller="sortable" data-sortable-handle-value=".handle">
                  <% @topic.results.each do |result| %>
                    <%= render "admin/topics/result", topic: @topic, article: result %>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
