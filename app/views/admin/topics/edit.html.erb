<% content_for :title, "Advisable Admin | Topics | #{@topic.name}" %>
<header class="bg-white shadow">
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8 flex">
    <h1 class="text-3xl font-bold text-gray-900"><%= @topic.name %></h1>
  </div>
</header>
<main>
  <div class="max-w-7xl mx-auto">
    <div class="py-8 px-4 sm:px-6 lg:px-8">
      <%= render "form", topic: @topic, url: admin_topic_path(@topic) %>
      <h2 class="mt-8 ml-2 text-2xl font-bold text-gray-900">Results</h2>
      <%= render "results", topic: @topic %>
      <div id="topic_results"></div>
      <%= form_with(url: search_articles_admin_topic_path(@topic)) do |form| %>
        <div class="mt-4 flex">
          <%= form.search_field :query, placeholder: "Search for Articles to add", class: "block w-full shadow-sm focus:ring-emerald-500 focus:border-emerald-500 sm:text-sm border-gray-300 rounded-sm" %>
          <%= form.submit "Search", class: "ml-2 justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-sm text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500", data: { disable_with: false } %>
        </div>
      <% end %>
      <div id="search_results"></div>
    </div>
  </div>
</main>
