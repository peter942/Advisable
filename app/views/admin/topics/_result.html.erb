<tr id="<%= dom_id(article, mode) %>" data-sortable-update-url="<%= move_result_admin_topic_path(topic, result: article) %>">
  <% if mode == "list" %>
    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
      <svg xmlns="http://www.w3.org/2000/svg" class="handle h-6 w-6 cursor-move" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </td>
  <% end %>
  <td class="py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">
    <%= article.title %>
  </td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
    <%= article.specialist.account.name %>
  </td>
  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
    <% if mode == "search" %>
      <%= button_to "Add", add_result_admin_topic_path(@topic, result: article.id), class: "text-green-600 hover:text-green-900" %>
    <% else %>
      <%= button_to "Remove", remove_result_admin_topic_path(topic, result: article), method: :delete, class: "text-red-600 hover:text-red-900", form: {data: {turbo_confirm: "Are you sure?"}} %>
    <% end %>
  </td>
</tr>
