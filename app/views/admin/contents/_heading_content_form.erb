<span class="inline-flex items-center px-3 py-0.5 rounded-full text-sm font-medium bg-red-800 text-red-100">
  Editing Heading <%= content.content["size"].capitalize %>
</span>
<p class="mt-3 text-base text-gray-500">
  <%= form_with(url: admin_content_path(content), method: :patch) do |form| %>
    <div class="mt-1">
      <%= form.select :size, options_for_select((1..2).map { |s| ["H#{s}", "h#{s}"] }, content.content["size"]), {}, {class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-sm shadow-sm focus:outline-none focus:ring-emerald-500 focus:border-emerald-500"} %>
    </div>
    <div class="mt-1">
      <%= form.text_area :text, value: content.content["text"], rows: 10, class: "text-base w-full shadow-sm block focus:ring-emerald-500 focus:border-emerald-500 border-gray-300 rounded-sm" %>
    </div>
    <div class="flex justify-between mt-2">
      <span></span>
      <%= form.submit "Save", class: "text-xs px-2 py-1 border border-transparent rounded shadow-sm text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500" %>
    </div>
  <% end %>
</p>
