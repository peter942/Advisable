<%= form_with(**content_form_params(content), class: "mb-4 border-2 border-solid border-emerald-500") do |form| %>
  <%= form.text_area :text, autofocus: true, value: content.content["text"], rows: 10, class: "text-base w-full focus:ring-0 block border-none p-0", data: { controller: "textarea", action: "input->textarea#resize", textarea_target: "input"} %>
  <%= form.hidden_field :section_id, value: content.section.id %>
  <%= form.hidden_field :type, value: content.type %>
  <div class="absolute top-0 right-0 p-2 gap-2 flex justify-between">
  <%= form.submit "Save", class: "text-xs px-2 py-1 border border-transparent rounded shadow-sm text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500" %>
<% end %>
