<header class="bg-white shadow">
  <div class="max-w-7xl mx-auto py-6 px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-gray-900">Editing article</h1>
  </div>
</header>
<main>
  <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
    <%= render "form", article: @article, url: admin_article_path(@article) %>
    <div>
      <%= link_to "Show this article", admin_article_path(@article) %> |
      <%= link_to "Back to articles", admin_articles_path %>
    </div>
  </div>
</main>
