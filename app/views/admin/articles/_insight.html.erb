<div class="py-5 first:pt-0 flex">
  <div class="flex-grow">
    <p class="font-semibold text-gray-800 mb-1"><%= insight.title %></p>
    <p class="leading-relaxed text-sm text-gray-700"><%= insight.description %></p>
  </div>
  <div>
    <%= link_to "Delete", remove_insight_admin_article_path(insight.article, insight_id: insight.id), class: "inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
</div>
