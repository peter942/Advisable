<% if article.errors.any? %>
  <div class="col-span-6">
    <div class="text-red-600">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="mb-4">
  <%= text_area_tag "case_study_article[title]", article.title, form: "article_form", placeholder: "Title", class: "p-0 border-none ring-2 ring-transparent hover:ring-neutral-300 focus:ring-2 focus:ring-blue-500 w-full text-4xl font-serif font-medium tracking-tight", data: {controller: "textarea", action: "input->textarea#resize keydown->textarea#preventLineBreak", textarea_target: "input"} %>
</div>

<div class="mb-12">
  <%= text_area_tag "case_study_article[subtitle]", article.subtitle, form: "article_form", class: "p-0 text-neutral-700 text-lg ring-2 ring-transparent hover:ring-neutral-300 focus:ring-2 focus:ring-blue-500 block w-full border-none", data: {controller: "textarea", action: "input->textarea#resize keydown->textarea#preventLineBreak", textarea_target: "input"} %>
</div>
