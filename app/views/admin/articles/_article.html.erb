<tr id="<%= dom_id article %>">
  <td class="py-2 px-2"><%= article.title %></td>
  <td class="py-2 px-2"><%= article.specialist.account.name %></td>
  <td class="py-2 px-2">
    <%= link_to "Edit", edit_admin_article_path(article), class: "px-2 py-1 text-sm font-medium rounded-xs text-white shadow-sm bg-yellow-600 hover:bg-yellow-700" %>
    <%= link_to "Destroy", admin_article_path(article), data: {turbo_method: "delete", turbo_confirm: "Are you sure?"}, class: "px-2 py-1 text-sm font-medium rounded-xs text-white shadow-sm bg-red-600 hover:bg-red-700" %>
  </td>
</tr>
