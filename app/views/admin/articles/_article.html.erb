<tr id="<%= dom_id article %>">
  <td class="py-2 px-2"><%= article.title %></td>
  <td class="py-2 px-2"><%= article.specialist.account.name %></td>
  <td class="py-2 px-2">
    <%= link_to "Edit", edit_admin_article_path(article), class: "px-2 py-1 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-amber-500 hover:bg-amber-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-400" %>
    <%= link_to "Destroy", admin_article_path(article), class: "mt-2 px-2 py-1 border border-transparent text-xs font-medium rounded shadow-sm text-white bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-400", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </td>
</tr>
