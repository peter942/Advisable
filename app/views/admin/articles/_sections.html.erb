<div class="space-y-28">
  <% article.sections.by_position.each do |section| %>
    <section>
      <h3 class="mb-5 bg-neutral-100 border border-solid border-neutral-300 px-4 py-3 rounded-sm text-lg font-medium leading-6 text-gray-900"><%= section.type.capitalize %></h3>
      <%= render "section", section: section %>
    </section>
  <% end %>
</div>
