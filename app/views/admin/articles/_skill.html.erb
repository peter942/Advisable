<div class="group h-12 flex items-center">
  <div class="flex-grow flex">
    <div class="truncate">
      <p class="text-sm text-gray-800 leading-none"><%= skill.skill.name %></p>
      <% if skill.primary %>
        <p class="mt-1 text-xs text-neutral-500 leading-none">Primary Skill</p>
      <% end %>
    </div>
  </div>
  <div class="hidden shrink-0 group-hover:flex gap-2">
    <% unless skill.primary %>
      <%= link_to "Make Primary", make_skill_primary_admin_article_path(skill.article, skill_id: skill.id), class: "inline-flex items-center px-2 py-1 border border-transparent text-xs font-medium rounded-xs text-neutral-700 hover:text-neutral-900 bg-neutral-100 hover:bg-neutral-200" %>
    <% end %>
    <%= link_to remove_skill_admin_article_path(skill.article, skill_id: skill.id), class: "inline-flex items-center px-2 py-1 border border-transparent text-xs font-medium rounded-xs text-neutral-700 hover:text-neutral-900 bg-neutral-100 hover:bg-neutral-200", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5">
        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
      </svg>
    <% end %>
  </div>
</div>
